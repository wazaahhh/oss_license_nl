<div style="padding:0 8px 8px 8px;">

<script type="text/javascript">

function switchto(q){ 
    if (q){ 
        document.getElementById('passwordtext').style.display="none"; 
        document.getElementById('PassBox').style.display="inline"; 
        document.getElementById('PassBox').focus(); 
    } else { 
        document.getElementById('PassBox').style.display="none"; 
        document.getElementById('passwordtext').style.display="inline"; 
    } 
} 

function textChange(elementID, defaultText)
{
   var element = document.getElementById(elementID);

   if(element.value == defaultText)
   {   
	  if(elementID == "PassBox") {
	  element.type="Password"
	  }
	  element.value = "";
   }
   else if(element.value == "")
   {
       if(elementID == "PassBox") {
	  element.type="Text"
	  }
	  element.value = defaultText;
   }
}
</script>


<script src="http://static.ak.connect.facebook.com/js/api_lib/v0.4/FeatureLoader.js.php"
type="text/javascript"></script>
  <script type="text/javascript">
      
  	  FB_RequireFeatures(["XFBML"], function()
	  {
	  	FB.Facebook.init("9c8f18dd045cd0c739d1242eaea4d132", "/mytr/connect/xd_receiver.htm");
	  	
	  	FB.Connect.ifUserConnected(FB.Facebook.get_sessionState().waitUntilReady( function()
      	{facebookStatusUpdate(false,true,false,false)}) );
      	
	   });
  </script>




  

  <script type="text/javascript">
	   
	   function facebookStatusUpdate(checkfb,redir,secure,mytr)
	   { 
			var xmlhttp = null;
			try
			{
				xmlhttp = new XMLHttpRequest();
			}
			catch (exc1)
			{
				try
				{
					xmlhttp = new ActiveXObject("Microsoft.XMLHTTP");
				}
				catch (exc2) {}
			}
				
			if (xmlhttp == null)
			{}
			else
			{
			
				var api = FB.Facebook.apiClient; 
				if(api != null && api.get_session() != null)
				{
					xmlhttp.open("GET", ((secure)? "https" : "http") + "://" + ((mytr)? "my" : "www")  + ".technologyreview.com/mytr/connect/ajax.aspx?fbid=" + api.get_session().uid + "&fbs=" + api.get_session().session_key, true);
					xmlhttp.onreadystatechange = function ()
					{
						if (xmlhttp.readyState == 4 && xmlhttp.responseXML != null)
						{
							var ajaxResponses = xmlhttp.responseXML.getElementsByTagName("ajaxResponse");
							if (ajaxResponses.length > 0)
							{
								var ajaxResponse = ajaxResponses[0];
								
								var errors = ajaxResponse.getElementsByTagName("error");
								var successes = ajaxResponse.getElementsByTagName("success");
								if (errors.length > 0 && redir)
								{
									var errorr = errors[0];
									var errorCode = errorr.getElementsByTagName("errorCode");
									if(errorCode.length > 0)
									{
										if(errorCode[0].childNodes[0].nodeValue == "1001")
										{
											if(!checkfb)
										   	{
											
												location.href = "/facebooklogin.aspx";
											
											}
											else
											{
												location.href = "/facebooklogin.aspx";
											}
										}
									}
								}
								else if (successes.length > 0)
								{		
									var successTag = successes[0];								
									var webUsers = successTag.getElementsByTagName("webUser");
									if (webUsers.length > 0)
									{
										var webUser = webUsers[0];	
										var ids = webUser.getElementsByTagName("id");
										if(ids.length > 0 )
										{
											//var id = ids[0];alert(id)
											
										    if(location.href.indexOf("?") != -1)
											   location.href += "&FB=T";
										    else
										   	   location.href += "?FB=T";
										   	
										}
									}
								}
							}
						}
					}	
					xmlhttp.send(null);
				}
			}
	   }
 </script>


